<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:orientation="vertical"
    android:background="#ffffff">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="40dp"
        android:text="@string/requestRideHeader"
        android:textColor="#004C99"
        android:textStyle="bold"
        android:id="@+id/titleOfPage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="@string/chooseGroups"/>
        <ListView
            android:id="@+id/groupListView"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:isScrollContainer="false">
        </ListView>



    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/origin"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"/>
        <AutoCompleteTextView
            android:id="@+id/requestOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Please enter your place" >

            <requestFocus />
        </AutoCompleteTextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/destination"
            android:textSize="15dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"/>
        <AutoCompleteTextView
            android:id="@+id/requestDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Please enter your place" >

            <requestFocus />
        </AutoCompleteTextView>
    </LinearLayout>
