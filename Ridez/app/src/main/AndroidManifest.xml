<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="il.ac.huji.ridez" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--
    To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <uses-permission android:name="android.permission.USE_CREDENTIALS" /> <!-- To retrieve the account name (email) as part of sign-in: -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" /> <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name=".ridezApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainMenuActivity"
            android:label="RIDEZ" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyGroupsActivity"
            android:label="@string/title_activity_my_groups"
            android:parentActivityName=".MainMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="il.ac.huji.ridez.MainMenuActivity" />
        </activity>
        <activity
            android:name=".NewGroupActivity"
            android:label="@string/title_activity_new_group"
            android:parentActivityName=".MyGroupsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="il.ac.huji.ridez.MyGroupsActivity" />
        </activity>
        <activity
            android:name=".GroupDetailsActivity"
            android:label="@string/title_activity_group_view"
            android:parentActivityName=".MyGroupsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="il.ac.huji.ridez.MyGroupsActivity" />
        </activity>
        <activity
            android:name=".RequestRideActivity"
            android:label="@string/title_activity_request_ride" >
        </activity>
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".RequestDetails"
            android:label="@string/title_activity_request_details" >
        </activity>
        <activity
            android:name=".OfferRideActivity"
            android:label="@string/title_activity_offer_ride" >
        </activity>
    </application>

</manifest>
